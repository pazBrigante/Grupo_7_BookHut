<!DOCTYPE html>
<html lang="es">
	<!DOCTYPE html>
	<html>
	
	<head>
		
		<%- include("../partials/head") %> 
	</head>
	
	 
	<body>
	
	
		<header class="main-header">
	
			<%- include("../partials/header") %> 
		   
		</header>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productEdit.nombre %></i></h2>
			</div>
		</div>
		<div class="col-12">
			
			<form action="/products/update/<%= productEdit.id %>?_method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="nombre" class="form-label">Título:</label>
						<input type="text" id="nombre" name="nombre" placeholder="Ej: El Principito" value="<%= productEdit.nombre %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="precio" class="form-label">Precio del producto:</label>
						<input type="text" id="precio" name="precio" placeholder="Ej: 5678" value="<%= productEdit.precio %>"class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="descuento" class="form-label">Descuento:</label>
						<input type="text" id="descuento" name="descuento" placeholder="Ej: 15" value="<%= productEdit.descuento%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="categoria" class="form-label">Categoría:</label>
						<select name="categoria" id="categoria" value="<%= productEdit.categoria %>" class="form-input">
							<option value="<%= productEdit.categoria %>">Elegí</option>
							<option value="lanzamientos">Nuevos Lanzamientos</option>
							<option value="seleccionados">Seleccionadoss</option>
							<option value="masVendidos">Mas Vendidos</option>
						</select>
					</div>
					<div class="col-12">
						<label for="descripcion" class="form-label">Descipción:</label>
						<textarea name="descripcion" id="descripcion" class="form-input"><%= productEdit.descripcion %></textarea>
					</div>
					<p>
						<label for="product-img"></label>
						<input type="file" name="product-img" id="product-img" placeholder="Subir imagen ">
					  </p>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<footer class="main-footer">

		<%- include("../partials/footer") %> 
	</footer>
	<!-- /footer -->
</body>	
</html>