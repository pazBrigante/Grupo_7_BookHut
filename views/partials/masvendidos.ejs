<!DOCTYPE html>
<html>

<head>

    <%- include("./head") %>
</head>


<body>


    <header class="main-header">

        <%- include("./header") %>
        <script src="/js/addItemCarrito.js" ></script>
    </header>


    <br />
    <h3>Mas Vendidos</h3>

    <div class="secctionGeneral_bloque">

        <% for(let i=0; i< resultadomv.length; i++) { %>

            <br />


            <div class="secctionGeneral_div_bloque">
                <article>
                    <img class="imagen" src=<%=resultadomv[i].img %> ><br />
                    <a href="products/detalle/<%=resultadomv[i].id%>">
                        <%= resultadomv[i].nombre %>
                    </a>
                    <p class="ps-text-grey">
                        <%= resultadomv[i].autor %>
                            <%= resultadomv[i].precio %>
                                <br />
                                <% if (locals.usuarioLogueado) { %>
                                    <%= resultadomv[i].nombre %> Comprar  <i id="<%= locals.usuarioLogueado.id%>,<%=resultadomv[i].id %>,<%=resultadomv[i].nombre%>,<%=resultadomv[i].autor%>,<%=resultadomv[i].precio%>" class="fa-solid fa-cart-shopping"></i>
                                    <% } %>
                </article>
            </div>

            <% } %>





    </div>

    <footer class="main-footer">

        <%- include("./footer") %>
    </footer>