        <p>
          <p>Nombre:</p>
          <label for="usuario"></label>
          <input type="text" name="usuario" id="usuario" placeholder="Nombre de usuario" value="<%= userEdit.usuario %>">
          
        </p>
        <p>
          <p>email:</p>
          <label for="email"></label>
          <input type="email" name="email" id="email" placeholder="Correo electrónico" value="<%= userEdit.email %>">
        </p>

        
          <label for="nacimiento">
            <p>Fecha de nacimiento:</p>
          </label>
          <input type="date" name="nacimiento" id="date" value="<%= userEdit.nacimiento %>">
        
        <p>
          <p>Domicilio:</p>
          <label for="domicilio"></label>
          <input type="text" name="domicilio" id="domicilio" placeholder="Domicilio" value="<%= userEdit.domicilio %>">
        </p>

        <p>
          <p>Id:</p>
          <label for="id"></label>
          <%= userEdit.id %>
        </p>
      
        <br />
        

        <p>
          <label for="avatar-img"></label>
          <input type="file" name="avatar_img" id="avatar_img"  placeholder="Subir imagen ">
        </p>

        <p>
          
         

          <% if (locals.usuarioLogueado) {%>
